{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "mdslide",
	"version": "0.1.1",
	"identifier": "net.d3fau1t.mdslide",
	"build": {
		"frontendDist": "../build",
		"beforeDevCommand": "npm run dev",
		"beforeBuildCommand": "npm run build"
	},
	"app": {
		"windows": [
			{
				"title": "mdslide",
				"width": 1600,
				"height": 800,
				"center": true,
				"resizable": true,
				"minimizable": true,
				"closable": true,
				"fullscreen": false,
				"decorations": true,
				"transparent": false,
				"alwaysOnTop": false,
				"maximized": false,
				"visible": true
			}
		],
		"security": {
			"csp": null,
			"assetProtocol": {
				"enable": true,
				"scope": ["**"]
			}
		}
	},
	"bundle": {
		"active": true,
		"targets": ["dmg", "msi", "deb", "rpm"],
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
